<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout10">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout8">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:id="@+id/linearLayout2"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignLeft="@+id/linearLayout2"
                android:layout_alignStart="@+id/linearLayout2"
                android:background="#ff83f3ff"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView2"
                    android:text="Your Speed"
                    android:layout_centerVertical="true"
                    android:layout_alignRight="@+id/textView2"
                    android:layout_alignEnd="@+id/textView2" />

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/textView3"
                    android:layout_alignLeft="@+id/speedDisplay"
                    android:layout_alignStart="@+id/speedDisplay"
                    android:layout_weight="0.66"
                    android:textSize="40dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/run_stats_width"
                android:layout_height="@dimen/run_stats_height"
                android:id="@+id/linearLayout3"
                android:background="#ff39f1ff"
                android:layout_below="@+id/linearLayout7"
                android:layout_toRightOf="@+id/linearLayout6"
                android:layout_toEndOf="@+id/linearLayout6" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView4"
                    android:text="Your Mile Time"
                    android:layout_centerVertical="true"
                    android:layout_alignRight="@+id/textView2"
                    android:layout_alignEnd="@+id/textView2" />

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView5"
                    android:layout_below="@+id/textView5"
                    android:layout_alignLeft="@+id/speedDisplay"
                    android:layout_alignStart="@+id/speedDisplay"
                    android:textSize="40dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/run_stats_width"
                android:layout_height="@dimen/run_stats_height"
                android:id="@+id/linearLayout6"
                android:layout_below="@+id/linearLayout4"
                android:layout_alignLeft="@+id/linearLayout4"
                android:layout_alignStart="@+id/linearLayout4"
                android:background="#ff21d8ff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView16"
                    android:text="Friend&apos;s Speed"
                    android:layout_centerVertical="true"
                    android:layout_alignRight="@+id/textView2"
                    android:layout_alignEnd="@+id/textView2" />

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView17"
                    android:layout_below="@+id/textView17"
                    android:layout_alignLeft="@+id/speedDisplay"
                    android:layout_alignStart="@+id/speedDisplay"
                    android:textIsSelectable="false"
                    android:textSize="40dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/run_stats_width"
                android:layout_height="@dimen/run_stats_height"
                android:id="@+id/linearLayout7"
                android:layout_below="@+id/linearLayout4"
                android:layout_toRightOf="@+id/linearLayout4"
                android:layout_toEndOf="@+id/linearLayout4"
                android:background="#ff13bcff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView18"
                    android:text="Friend&apos;s Mile Time"
                    android:layout_centerVertical="true"
                    android:layout_alignRight="@+id/textView2"
                    android:layout_alignEnd="@+id/textView2" />

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView19"
                    android:layout_below="@+id/textView19"
                    android:layout_alignLeft="@+id/speedDisplay"
                    android:layout_alignStart="@+id/speedDisplay"
                    android:textSize="40dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout9"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:id="@+id/linearLayout4"
                android:layout_below="@+id/linearLayout4"
                android:layout_alignLeft="@+id/linearLayout4"
                android:layout_alignStart="@+id/linearLayout4"
                android:background="#ff2689ff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView6"
                    android:text="Distance Run"
                    android:layout_centerVertical="true"
                    android:layout_alignRight="@+id/textView6"
                    android:layout_alignEnd="@+id/textView6" />

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView7"
                    android:layout_below="@+id/textView7"
                    android:layout_alignLeft="@+id/speedDisplay"
                    android:layout_alignStart="@+id/speedDisplay"
                    android:textIsSelectable="false"
                    android:textSize="40dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/run_stats_width"
                android:layout_height="@dimen/run_stats_height"
                android:id="@+id/linearLayout5"
                android:background="#ff2d4eff"
                android:layout_below="@+id/linearLayout7"
                android:layout_toRightOf="@+id/linearLayout6"
                android:layout_toEndOf="@+id/linearLayout6" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView14"
                    android:text="Relative Distance"
                    android:layout_centerVertical="true"
                    android:layout_alignRight="@+id/textView6"
                    android:layout_alignEnd="@+id/textView6" />

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView15"
                    android:layout_below="@+id/textView15"
                    android:layout_alignLeft="@+id/speedDisplay"
                    android:layout_alignStart="@+id/speedDisplay"
                    android:textSize="40dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Running Stats"
        android:id="@+id/textView20"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish Run"
        android:id="@+id/button5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/debug"
        android:layout_above="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout10"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5" />

</RelativeLayout>